<UserControl
    x:Class="appLauncher.Control.SettingsItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:appLauncher.Control"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <FontIcon FontSize="32"
                  FontFamily="Segoe MDL2 Assets"
                  Glyph="{x:Bind CurrentSettingsItem.IconGlyphCode}"/>
        <StackPanel Grid.Column="1">
            <TextBlock Style="{StaticResource SettingsItemTitleStyle}"
                       Text="{x:Bind CurrentSettingsItem.Title}"/>
            <TextBlock Style="{StaticResource SettingsItemDescriptionStyle}"
                       Text="{x:Bind CurrentSettingsItem.Description}"/>
        </StackPanel>
    </Grid>
</UserControl>
